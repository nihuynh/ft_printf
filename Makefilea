.PHONY : all clean fclean re up

CC = @gcc $(INCLUDES) $(FLAGS)

FLAGS = -Wall -Wextra -Werror

NAME = libftprintf.a

INCLUDES = -I includes/ -I libft/include -I

HEADERS = ./includes/ft_printf.h ./includes/ft_conv.h

LIBFT = libft/libft.a

SRCS = 	srcs/ft_printf.c srcs/ft_itob_base.c srcs/form_unknown.c srcs/form_percent.c srcs/form_integer.c srcs/form_unsigned.c\
			srcs/form_octal.c srcs/form_hexa.c srcs/form_float.c srcs/form_character.c\
			srcs/form_string.c srcs/form_pointer.c srcs/conv.c

OBJS = $(SRCS:.c=.o)

all : $(NAME)

$(NAME) : $(SRCS) $(OBJS) $(LIBFT) $(HEADERS) $(PRINTF)
	@printf "\033[032mlibftprintf.a : Object files Created\033[0m\n"
	@$(CC) $(NCURSES) $(OBJS) -o $(NAME) $(LIBFT) $(PRINTF)
	@printf "\033[032mlibftprintf.a : libftprintf.a Created\033[0m\n"

$(LIBFT) :
	@make -C libft/

clean :
	@rm -f $(OBJS)
	@echo "\033[32mlibftprintf.a : Object files Removed\033[0m"

fclean : clean
	@rm -f $(NAME)
	@echo "\033[32mlibftprintf.a : libftprintf.a Removed\033[0m"

up : all clean

re : fclean all
